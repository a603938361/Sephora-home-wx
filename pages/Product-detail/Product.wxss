/* pages/Product-detail/Product.wxss */

.productDetail {
  display: flex;
  flex-direction: column;
}

.swiper-style {
  width: 100%;
  height: 600rpx;
}

.swiperImgStyle {
  width: 630rpx;
  height: 520rpx;
  margin-top: 20rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  box-shadow: 2px 2px 15px #ebe9e9, -2px -2px 15px #ebe9e9 inset;

}

.productNameCN {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: black;
  margin-left: 24rpx;
  line-height: 44rpx;
}

.productNameEN {
  margin-top: 14rpx;
  font-size: 28rpx;
  line-height: 42rpx;
  margin-left: 24rpx;
}

.productDesc {
  margin-top: 24rpx;
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 36rpx;
  margin-left: 24rpx;
}

.priceStyle {
  display: flex;
  flex-direction: row;
  margin-top: 36rpx;
  margin-left: 24rpx;
}

.priceCN {
  font-size: 20rpx;
  position: relative;
  left: 0rpx;
  bottom: 0rpx;
  margin-top: 5rpx;
}

.productPrice {
  font-size: 36rpx;
  line-height: 30rpx;
  margin-left: 5rpx;
}

.shareStyle {
  position: fixed;
  right: 30rpx;
  top: 700rpx;
}

.shareImgStyle {
  width: 50rpx;
  height: 50rpx;
  background: none;
  margin-top: 20rpx;
}

.plain {
  width: 100rpx;
  height: 100rpx;
  border: none;
  background: none;
  box-shadow: 2px 2px 2px #ebe9e9, -2px -2px 2px #ebe9e9;
}

.plain::after {
  border: none;
}

.bottomStyle {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  box-shadow: 0px -2px 3px #ebe9e9;
}

.bottomImgStyle {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}

.bottomSubImg {
  width: 50rpx;
  height: 50rpx;
  margin: 30rpx 40rpx;
}

.twoButton {
  display: flex;
  flex-direction: row;
  width: 500rpx;
  height: 110rpx;
  float: right;
  border-left: thick solid gainsboro;
  border-width: 1rpx;
}

.subButton {
  width: 250rpx;
  border: none;
  background: none;
  border-right: thick solid gainsboro;
  border-width: 1rpx;
  border-top-right-radius: 0px;
  border-bottom-right-radius: 0px;
}

.subButton::after {
  border: none;
}
